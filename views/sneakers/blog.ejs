<%- include('../partials/header') %>
<link rel="stylesheet" href="/stylesheets/blog.css">
<h1>Blog</h1>

<a href="/sneakers/new"><button type="submit">Add Sneaker</button></a>


<table id="list">
    <thead>
      <tr>
        <th>Brand</th>
        <th>Name</th>
        <th>Colorway</th>
        <th>Release<br>Year</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% sneakers.forEach(function(s) { %>
        <tr>
          <td><%= s.brand %></td>
          <td><%= s.name %></td>
          <td><%= s.colorWay %></td>
          <td><%= s.releaseYear %></td>
          <td><a href="/sneakers/<%= s._id %>">DETAILS</a></td>
        </tr>
        <% }); %>
      </tbody>
    </table>

<%- include('../partials/footer') %>